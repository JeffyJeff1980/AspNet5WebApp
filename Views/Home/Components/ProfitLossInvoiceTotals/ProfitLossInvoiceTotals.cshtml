@model IEnumerable<InstaCore.Models.DataTransferObjects.InstitutionInvoiceDto>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>
        Institution
      </th>
      <th>
        Total this week
      </th>
      <th>
        Total this month
      </th>
      <th>
        Total this calendar year
      </th>
      <th>
        Total this fiscal year
      </th>
    </tr>
  </thead>
  <tbody>
  @foreach (var institution in Model) 
  {
    <tr>
      <td>
        @institution.Description
      </td>
      <td>
        @String.Format("{0:C}", institution.WeekTotal)
      </td>
      <td>
        @String.Format("{0:C}", institution.MonthTotal)
      </td>
      <td>
        @String.Format("{0:C}", institution.CalendarYearTotal)
      </td>
      <td>
        @String.Format("{0:C}", institution.FiscalYearTotal)
      </td>
    </tr>
  }
  </tbody>
  <tfoot>
    <tr>
      <td>
        <b>Grand Total</b>
      </td>
      <td>
        @String.Format("{0:C}", Model.Sum(i => i.WeekTotal))
      </td>
      <td>
        @String.Format("{0:C}", Model.Sum(i => i.MonthTotal))
      </td>
      <td>
        @String.Format("{0:C}", Model.Sum(i => i.CalendarYearTotal))
      </td>
      <td>
        @String.Format("{0:C}", Model.Sum(i => i.FiscalYearTotal))
      </td>
    </tr>
  </tfoot>
</table>